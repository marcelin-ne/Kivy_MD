Screen:

    MDCard:
        size_hint: None,None
        size: 600,800
        pos_hint: {"center_x": .5, "center_y": .5}
        elevation: 10 #Shadow
        padding: ('25dp', '25dp', '25dp', '25dp')
        spacing:25
        orientation: 'vertical'
        MDLabel:
            id:welcome_label
            text: "Welcome to the app"
            font_size: 40
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        MDTextField:
            id:user
            hint_text: "Username"
            mode: "round"
            max_text_length: 15
            helper_text: "Massage"
            icon_right: "language-python"
            icon_right_color_focus: "orange"
        MDTextField:
            id:password
            hint_text: "Password"
            mode: "round"
            max_text_length: 15
            helper_text: "Massage"
            icon_right: "eye-off"
            icon_right_color_focus: "orange"
            password: True
        MDRoundFlatButton:
            text: "Login"
            font_size: 20
            pos_hint: {'center_x': 0.5,'center_y': 0.0}
            on_press: app.login()
        MDRoundFlatButton:
            text: "Clear"
            font_size: 20
            pos_hint: {'center_x': 0.5,'center_y': 0.0}
            on_press: app.clear()
        Widget:
            size_hint_y: None
            height: 10
